{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.1",
    "title": "ContactBook",
    "description": "Base URL https://contacts-04gv.onrender.com"
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [{ "url": "https://contacts-04gv.onrender.com" }],
  "tags": [
    {
      "name": "Auth",
      "description": "Authorization endpoints"
    },
    {
      "name": "Contacts",
      "description": "User contacts endpoints"
    }
  ],
  "paths": {
    "/api/auth/google": {
      "get": {
        "tags": ["Auth"],
        "summary": "User google registration",
        "parameters": [],
        "requestBody": {
          "description": "Redirect to home URL with token in query parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "string",
                "description": "Return TOKEN in query URL"
              }
            }
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "User registration",
        "parameters": [],
        "requestBody": {
          "description": "Registration object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "409": {
            "description": "Email or password already in use"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "User login",
        "parameters": [],
        "requestBody": {
          "description": "Login object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "409": {
            "description": "Email or password already in use"
          }
        }
      }
    },
    "/api/auth/logout": {
      "get": {
        "tags": ["Auth"],
        "summary": "Logout user",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Logout success"
          }
        }
      }
    },
    "/api/auth/current": {
      "get": {
        "tags": ["Auth"],
        "summary": "Current user",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CurrentResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/auth/subscription": {
      "patch": {
        "tags": ["Auth"],
        "summary": "Update subscription",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Subscription object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SubscriptionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SubscriptionResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request must be starter, pro, business"
          }
        }
      }
    },
    "/api/auth/avatars": {
      "patch": {
        "tags": ["Auth"],
        "summary": "Update user avatar",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "User photo",
          "required": true,
          "content": {
            "image/png": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "image/jpg": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "image/jpeg": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AvatarResponse"
                }
              }
            }
          },
          "400": {
            "description": "Unsupported file format. Must be jpeg, png, jpg"
          }
        }
      }
    },
    "/api/contacts": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Get all user contacts",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AllContactResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/api/contacts/create": {
      "post": {
        "tags": ["Contacts"],
        "summary": "Create new contact",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Contacts object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ContactRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Contact create",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContactResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request. [name, phone] is require"
          }
        }
      }
    },
    "/api/contacts/{contactId}": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Get contacts by ID",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "The ID contacts which need to find ",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "schema": {
          "type": "string"
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContactIDResponse"
                }
              }
            }
          },
          "400": {
            "description": "Is not valid ID"
          }
        }
      }
    },
    "/api/contacts/update/{contactId}": {
      "put": {
        "tags": ["Contacts"],
        "summary": "Update contact",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "The ID contacts which need to update ",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Update contact object",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContactIDResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/contacts/favorite/{contactId}": {
      "patch": {
        "tags": ["Contacts"],
        "summary": "Update favorite status",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "The ID contacts which need to update ",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Update favorite object",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateFavoriteRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContactIDResponse"
                }
              }
            }
          },
          "400": {
            "description": "Missing field favorite"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/contacts/delete/{contactId}": {
      "delete": {
        "tags": ["Contacts"],
        "summary": "Delete user contact",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "The ID contacts which need to update ",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return deleted object",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RemoveResponse"
                }
              }
            }
          },
          "400": {
            "description": "ContactID is not valid id"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["name", "email", "password", "subscription"],
        "properties": {
          "name": {
            "type": "string",
            "description": "User`s name",
            "format": "name"
          },
          "email": {
            "type": "string",
            "description": "User`s email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User`s password",
            "example": "Qwerty123"
          },
          "subscription": {
            "type": "string",
            "enum": ["starter", "pro", "business"]
          }
        }
      },
      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "User`s name",
            "format": "name"
          },
          "email": {
            "type": "string",
            "description": "User`s email",
            "format": "email"
          },
          "avatarUrl": {
            "type": "string",
            "description": "Default user avatar",
            "example": "//www.gravatar.com/avatar/d57fa4c185e22907e97382fa59233cdf"
          },
          "token": {
            "type": "string",
            "description": "User token"
          },
          "subscription": {
            "type": "string",
            "description": "User subscription",
            "example": "pro"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User`s email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User`s password",
            "example": "Qwerty123"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "User`s token"
          },
          "user": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "User`s name",
                "format": "name"
              },
              "subscription": {
                "type": "string",
                "description": "User`s subscription",
                "example": "pro"
              }
            }
          }
        }
      },
      "CurrentResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "User`s name",
              "format": "name"
            },
            "subscription": {
              "type": "string",
              "description": "User`s subscription",
              "example": "pro"
            }
          }
        }
      },
      "SubscriptionRequest": {
        "type": "object",
        "required": ["subscription"],
        "properties": {
          "subscription": {
            "type": "string",
            "enum": ["starter", "pro", "business"]
          }
        }
      },
      "SubscriptionResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "description": "User`s name",
              "example": "Subscription is update"
            },
            "subscription": {
              "type": "string",
              "description": "Updated subscription",
              "example": "pro"
            }
          }
        }
      },
      "AvatarResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "avatarURL": {
              "type": "string",
              "description": "User`s avatar",
              "example": "https://res.cloudinary.com/dzqzq9kcl/image/upload/v1683110599/contactsAvatars/64521a3d3a0c0ab1986b3f4d_1683110599.jpg"
            }
          }
        }
      },
      "AllContactResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string",
              "description": "Contact ID"
            },
            "name": {
              "type": "string",
              "description": "Contact name",
              "format": "name"
            },
            "email": {
              "type": "string",
              "description": "Contact email",
              "example": "ex@mail.com"
            },
            "phone": {
              "type": "string",
              "description": "contact phone",
              "example": "380999999999"
            },
            "favorite": {
              "type": "boolean"
            },
            "owner": {
              "type": "object",
              "properties": {
                "_id": {
                  "type": "string",
                  "description": "User ID who create contact"
                },
                "name": {
                  "type": "string",
                  "description": "User name who create contact"
                },
                "email": {
                  "type": "string",
                  "description": "User email who create contact"
                }
              }
            }
          }
        }
      },
      "ContactRequest": {
        "type": "object",
        "required": ["name", "phone"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Contact name",
            "format": "name"
          },
          "email": {
            "type": "string",
            "description": "Contact email",
            "format": "email"
          },
          "phone": {
            "type": "string",
            "minimum": 10,
            "maximum": 12,
            "description": "Contact phone",
            "example": "380999999999"
          },
          "favorite": {
            "type": "boolean"
          }
        }
      },
      "ContactResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string",
              "description": "ID contact object",
              "example": "6453b3cc05e5bebb5f195f5f"
            },
            "name": {
              "type": "string",
              "description": "Contact name",
              "format": "name"
            },
            "email": {
              "type": "string",
              "description": "Contact email",
              "format": "email"
            },
            "phone": {
              "type": "string",
              "description": "Contact number",
              "example": "380999999999"
            },
            "favorite": {
              "type": "boolean"
            },
            "owner": {
              "type": "string",
              "description": "User ID who create contact",
              "example": "6453b3cc05e5bebb5f195f5f"
            },

            "createdAt": {
              "type": "string",
              "description": "Date when contact created was",
              "example": "2023-05-04T13:31:56.441Z"
            },
            "updatedAt": {
              "type": "string",
              "description": "Date when contact update was",
              "example": "2023-05-04T13:31:56.441Z"
            }
          }
        }
      },
      "ContactIDResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Contact name",
              "format": "name"
            },
            "email": {
              "type": "string",
              "description": "Contact email",
              "format": "email"
            },
            "phone": {
              "type": "string",
              "description": "Contact number",
              "example": "380999999999"
            },
            "favorite": {
              "type": "boolean"
            },
            "owner": {
              "type": "string",
              "description": "User ID who create contact",
              "example": "6453b3cc05e5bebb5f195f5f"
            },
            "_id": {
              "type": "string",
              "description": "ID contact object",
              "example": "6453b3cc05e5bebb5f195f5f"
            },
            "createdAt": {
              "type": "string",
              "description": "Date when contact created was",
              "example": "2023-05-04T13:31:56.441Z"
            },
            "updatedAt": {
              "type": "string",
              "description": "Date when contact update was",
              "example": "2023-05-04T13:31:56.441Z"
            }
          }
        }
      },
      "UpdateRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Contact name",
            "format": "name"
          },
          "email": {
            "type": "string",
            "description": "Contact email",
            "format": "email"
          },
          "phone": {
            "type": "string",
            "description": "Contact phone number",
            "example": "380888888888"
          }
        }
      },
      "UpdateFavoriteRequest": {
        "type": "object",
        "properties": {
          "favorite": {
            "type": "boolean"
          }
        }
      },
      "RemoveResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "description": "Delete success"
            },
            "deleted_contact": {
              "type": "object",
              "properties": {
                "_id": {
                  "type": "string",
                  "description": "ID contact object",
                  "example": "6453b3cc05e5bebb5f195f5f"
                },
                "name": {
                  "type": "string",
                  "description": "Contact name",
                  "format": "name"
                },
                "email": {
                  "type": "string",
                  "description": "Contact email",
                  "format": "email"
                },
                "phone": {
                  "type": "string",
                  "description": "Contact number",
                  "example": "380999999999"
                },
                "favorite": {
                  "type": "boolean"
                },
                "owner": {
                  "type": "string",
                  "description": "User ID who create contact",
                  "example": "6453b3cc05e5bebb5f195f5f"
                },

                "createdAt": {
                  "type": "string",
                  "description": "Date when contact created was",
                  "example": "2023-05-04T13:31:56.441Z"
                },
                "updatedAt": {
                  "type": "string",
                  "description": "Date when contact update was",
                  "example": "2023-05-04T13:31:56.441Z"
                }
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
